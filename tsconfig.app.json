{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
    "packages/**/*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "packages/*": ["./packages/*"]
    }
  }
}
