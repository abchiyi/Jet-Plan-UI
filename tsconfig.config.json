{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "./packages/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"],
      "packages/*": ["./packages/*"],
      "jet-plan-ui/*": ["./packages/jet-plan-ui/*"]
    }
  }
}
